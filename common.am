LIBS_BIONET_CAL_UTIL = $(top_srcdir)/cal/util/libevent.la

INCLUDES_BIONET_CAL_SERVER = $(top_srcdir)/cal/cal-server.h
CFLAGS_BIONET_CAL_SERVER = -I$(top_srcdir)/cal
LDFLAGS_BIONET_CAL_SERVER = -L$(top_srcdir)/cal
