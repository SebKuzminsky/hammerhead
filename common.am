INCLUDES_BIONET_CAL_CLIENT = $(top_srcdir)/cal/cal-client.h
CFLAGS_BIONET_CAL_CLIENT = -I$(top_srcdir)/cal
LDFLAGS_BIONET_CAL_CLIENT = -L$(top_srcdir)/cal
LIBS_BIONET_CAL_CLIENT = $(top_srcdir)/cal/mdnssd-bip/client/libcal-mdnssd-bip-client.la

INCLUDES_BIONET_HAB = $(top_srcdir)/hab/libhab/hardware-abstractor.h
