CFLAGS_BIONET_UTIL = -I$(top_srcdir)/util 
LDFLAGS_BIONET_UTIL = -L$(top_srcdir)/util 
LIBS_BIONET_UTIL = $(top_srcdir)/util/libbionet-util.la

INCLUDES_BIONET_CLIENT = $(top_srcdir)/client/libbionet/bionet.h
CFLAGS_BIONET_CLIENT = -I$(top_srcdir)/client/libbionet 
LDFLAGS_BIONET_CLIENT = -L$(top_srcdir)/client/libbionet
